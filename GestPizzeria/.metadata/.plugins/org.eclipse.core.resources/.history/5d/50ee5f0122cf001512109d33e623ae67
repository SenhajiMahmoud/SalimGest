package com.Pizzeria.business;

import org.hibernate.SQLQuery;
import org.hibernate.Session;
import org.hibernate.jpa.internal.schemagen.GenerationSourceFromScript;

import com.Pizzeria.models.Candidature;
import com.Pizzeria.persistence.HibernateUtil;
import com.Pizzeria.persistence.PersonneManager;

public class DefaultServices implements Services {

	private Session session;

	public DefaultServices() {
		session = HibernateUtil.getSessionFactory().getCurrentSession();
	}

	public void Add(Candidature candidat) {
		session.beginTransaction();
		session.save(candidat);
		session.getTransaction().commit();

	}

	public int tailleTable(String nomTable) {
		session.beginTransaction();
		String q = "select count(*) from " + nomTable;
		SQLQuery s = session.createSQLQuery(q);
		session.getTransaction().commit();
		return 0;
	}

}
